generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int   @id @default(autoincrement())
  email String @unique
  password String
  name String
  baekjoonName String
  major String @default("unknown")
  rank Int?
  tier String?
  solvedNum Int?
  solvedProblems SolvedProblem[]
  enrollYear Int @default(2025)
  createdAt DateTime @default(now())

  snapshots SolveSnapshot[]
  weeklyRanks WeeklyRank[]
}

model SolveSnapshot {
  id          Int      @id @default(autoincrement())
  userId      Int
  solvedCount Int
  snapedAt    DateTime

  user        User    @relation(fields: [userId], references:[id])

  @@index([snapedAt])
}

model WeeklyRank {
  id         Int      @id @default(autoincrement())
  weekStart  DateTime 
  major      String
  userId     Int
  solvedThisWeek Int  

  user       User     @relation(fields: [userId], references: [id])

  @@index([weekStart, major])
}

model SolvedProblem {
  id         Int      @id @default(autoincrement())
  userId     Int
  problemId  Int

  user       User     @relation(fields: [userId], references: [id])
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  author    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}